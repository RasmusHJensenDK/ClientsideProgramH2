    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Stylesheet.css" />
</head>
<body style="background-image: url(/Images/cross.png); background-repeat: repeat; background-color: black!important">
    <div>
        <nav class="navbar navbar-expand-xl sticky-top navbar-dark bg-dark">
            <a href="~/Home" class="navbar-brand"><i class="fa fa-car"></i>Mercedes<b> Benz</b></a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbarCollapse" class="collapse navbar-collapse justify-content-center">
                <div class="navbar-nav ml-auto">
                    <a href="~/Home" class="nav-item nav-link active"><i class="fa fa-home"></i><span>Udstilling</span></a>
                    <a href="~/Værksted/Create" class="nav-item nav-link"><i class="fa fa-gears"></i><span>Værksted</span></a>
                    <a href="~/Medlemskab/Create" class="nav-item nav-link"><i class="fa fa-users"></i><span>Medlemskab</span></a>
                    <a href="~/Kontakt" class="nav-item nav-link"><i class="fa fa-pie-chart"></i><span>Kontakt</span></a>
                </div>
            </div>
        </nav>
        <div class="container" >
            <main role="main" style="background-color: black;" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="border-top footer text-muted" style="background-color: black; color:white;">
        <div class="container">
            &copy; 2020 - Mercedes-Benz - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            External api call (Weather) :
            <p id="weather"></p>
            <p id="weather2"></p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

